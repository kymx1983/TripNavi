<div class="main">
  <div class="container">
    <h1>新規投稿</h1>

    <% @post.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>

    <%= form_tag("/post/create") do %>
      <div class="form-group">
        <h2><label>訪問日</label></h2>
        <div class="input-content">
          <label>
            <input type="date" class="input-text" name="visit_date"/>
          </label>
        </div>
      </div>

      <div class="form-group">
        <h2><label>概要</label></h2>
        <div class="input-content">
          <label>
            <textarea class="content-area" name="content" rows="3"></textarea>
          </label>
        </div>
      </div>

      <div class="form-group">
        <h2><label>評価</label></h2>
        <div class="input-content">
          <label>
            <input type="number" class="input-text" name="score"/>
          </label>
        </div>
      </div>

      <hr>
      <br>
      <input type="submit" class="btn-flat-border" value="確定">　
    <% end %>
    <br><br>
  </div>
</div>